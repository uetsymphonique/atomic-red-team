{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/atomic-schema.json",
    "title": "Atomic Red Team Technique (Normalized)",
    "description": "Schema for normalized Atomic Red Team technique objects intended for LLM structured output. Uses array form for input_arguments and a unified 'procedure' field in executor.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "attack_technique",
        "display_name",
        "atomic_tests"
    ],
    "properties": {
        "attack_technique": {
            "type": "string",
            "description": "MITRE ATT&CK technique identifier",
            "pattern": "^T\\d{4}(?:\\.\\d{3})?$"
        },
        "display_name": {
            "type": "string",
            "minLength": 5
        },
        "atomic_tests": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "description",
                    "supported_platforms",
                    "executor"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1
                    },
                    "supported_platforms": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "items": {
                            "type": "string",
                            "enum": [
                                "windows",
                                "macos",
                                "linux",
                                "office-365",
                                "azure-ad",
                                "google-workspace",
                                "saas",
                                "iaas",
                                "containers",
                                "iaas:gcp",
                                "iaas:azure",
                                "iaas:aws",
                                "esxi"
                            ]
                        }
                    },
                    "executor": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "procedure"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "enum": [
                                    "manual",
                                    "powershell",
                                    "sh",
                                    "bash",
                                    "command_prompt"
                                ]
                            },
                            "elevation_required": {
                                "type": "boolean",
                                "default": false
                            },
                            "procedure": {
                                "type": "string",
                                "minLength": 1,
                                "description": "Unified field containing 'steps' for manual executors or 'command' for command-based executors."
                            },
                            "cleanup_command": {
                                "type": "string"
                            }
                        }
                    },
                    "input_arguments": {
                        "type": "array",
                        "description": "Array form of inputs; each includes arg_name and metadata.",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "arg_name",
                                "description",
                                "type"
                            ],
                            "properties": {
                                "arg_name": {
                                    "type": "string",
                                    "minLength": 2,
                                    "pattern": "^[\\w_-]+$"
                                },
                                "description": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "type": {
                                    "type": "string",
                                    "description": "Argument type",
                                    "enum": [
                                        "url",
                                        "string",
                                        "float",
                                        "integer",
                                        "path"
                                    ]
                                },
                                "default": {
                                    "description": "Default value for the argument",
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "number"
                                        },
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "description",
                                "prereq_command"
                            ],
                            "properties": {
                                "description": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "prereq_command": {
                                    "type": "string",
                                    "minLength": 1
                                },
                                "get_prereq_command": {
                                    "type": [
                                        "string",
                                        "null"
                                    ]
                                }
                            }
                        }
                    },
                    "dependency_executor_name": {
                        "type": "string",
                        "description": "Executor to use for dependency prereq/get-prereq commands. Optional; if omitted, use executor.name.",
                        "enum": [
                            "manual",
                            "powershell",
                            "sh",
                            "bash",
                            "command_prompt"
                        ]
                    }
                }
            }
        }
    }
}