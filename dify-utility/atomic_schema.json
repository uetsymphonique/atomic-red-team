{
    "title": "Atomic Red Team Technique (Normalized)",
    "description": "Schema for normalized Atomic Red Team technique objects intended for LLM structured output. Uses array form for input_arguments and a unified 'procedure' field in executor.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "attack_technique",
        "display_name",
        "atomic_tests"
    ],
    "properties": {
        "attack_technique": {
            "type": "string",
            "description": "MITRE ATT&CK technique ID of this file (e.g., T1047 or T1047.001). Must match the technique represented by the atomic tests.",
            "pattern": "^T\\d{4}(?:\\.\\d{3})?$"
        },
        "display_name": {
            "type": "string",
            "minLength": 5,
            "description": "Human-readable technique name from ATT&CK (e.g., 'Windows Management Instrumentation')."
        },
        "atomic_tests": {
            "type": "array",
            "minItems": 1,
            "description": "List of atomic test cases describing concrete procedures for the technique.",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "description",
                    "supported_platforms",
                    "executor"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Title of the atomic test (concise, action-oriented)."
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "description": "What the test does and what to expect; may include context, caveats, and references."
                    },
                    "supported_platforms": {
                        "type": "array",
                        "minItems": 1,
                        "uniqueItems": true,
                        "description": "Target platforms on which this atomic test is expected to work.",
                        "items": {
                            "type": "string",
                            "description": "OS or environment identifier.",
                            "enum": [
                                "windows",
                                "macos",
                                "linux",
                                "office-365",
                                "azure-ad",
                                "google-workspace",
                                "saas",
                                "iaas",
                                "containers",
                                "iaas:gcp",
                                "iaas:azure",
                                "iaas:aws",
                                "esxi"
                            ]
                        }
                    },
                    "executor": {
                        "type": "object",
                        "additionalProperties": false,
                        "required": [
                            "name",
                            "procedure"
                        ],
                        "description": "Execution details. 'procedure' contains either manual steps or a command line to run.",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Execution environment. 'command_prompt' implies Windows cmd, 'powershell' is PowerShell, 'bash'/'sh' are shells, 'manual' requires human steps.",
                                "enum": [
                                    "manual",
                                    "powershell",
                                    "sh",
                                    "bash",
                                    "command_prompt"
                                ]
                            },
                            "elevation_required": {
                                "type": "boolean",
                                "default": false,
                                "description": "True if admin/root is required to run the procedure successfully."
                            },
                            "procedure": {
                                "type": "string",
                                "minLength": 1,
                                "description": "Unified content to execute: for 'manual', human-readable steps; for others, the exact command(s). Supports placeholders like #{arg_name} that must match input_arguments."
                            },
                            "cleanup_command": {
                                "type": "string",
                                "description": "Optional command(s) to revert changes or stop processes after execution."
                            }
                        }
                    },
                    "input_arguments": {
                        "type": "array",
                        "description": "Input parameters used in the 'procedure' via placeholders like #{arg_name}.",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "arg_name",
                                "description",
                                "type"
                            ],
                            "properties": {
                                "arg_name": {
                                    "type": "string",
                                    "minLength": 2,
                                    "pattern": "^[\\w_-]+$",
                                    "description": "Identifier referenced in the procedure as #{arg_name}."
                                },
                                "description": {
                                    "type": "string",
                                    "minLength": 1,
                                    "description": "What the argument represents and how it affects execution."
                                },
                                "type": {
                                    "type": "string",
                                    "description": "Argument data type. Use 'path' for filesystem paths; 'url' for URLs.",
                                    "enum": [
                                        "url",
                                        "string",
                                        "float",
                                        "integer",
                                        "path"
                                    ]
                                },
                                "default": {
                                    "description": "Default value used if none is provided. May be omitted.",
                                    "oneOf": [
                                        {
                                            "type": "string"
                                        },
                                        {
                                            "type": "number"
                                        },
                                        {
                                            "type": "boolean"
                                        },
                                        {
                                            "type": "null"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "dependencies": {
                        "type": "array",
                        "description": "Optional preconditions for the test (e.g., required files, tools, or environment state).",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "description",
                                "prereq_command"
                            ],
                            "properties": {
                                "description": {
                                    "type": "string",
                                    "minLength": 1,
                                    "description": "What must be true/available before executing the procedure."
                                },
                                "prereq_command": {
                                    "type": "string",
                                    "minLength": 1,
                                    "description": "Command to check whether the prerequisite is satisfied. Exit code 0 indicates success."
                                },
                                "get_prereq_command": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "Command to install or fetch the prerequisite when missing. Optional."
                                }
                            }
                        }
                    },
                    "dependency_executor_name": {
                        "type": "string",
                        "description": "Executor used for dependency commands (check/get). Optional; defaults to the main executor.name if not set.",
                        "enum": [
                            "manual",
                            "powershell",
                            "sh",
                            "bash",
                            "command_prompt"
                        ]
                    }
                }
            }
        }
    }
}